<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- favicon -->
    <link rel="shortcut icon" href="./assets/favicon.ico" type="image/x-icon" />
    <!-- font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css"/>
    <!-- normalize css -->
    <link rel="stylesheet" href="./normalize.css" />
    <!-- main css -->
    <link rel="stylesheet" href="./styles.css" />
    <title>Pet Adoption Platform || Admin</title>
</head>
    <body>
        <a href="/" class="home-link">
            <i class="fas fa-arrow-left"></i>
            Return to Home
        </a><br>
        <a href="/adminUsers" class="home-link">
            <i class="fas fa-arrow-left"></i>
            Return to Users
        </a>
        <main>
            <header>
                <h2 class="page-title">Pets</h2>
            </header>
    
            <section class="pets-container">
                <% if (!allPets || allPets.length === 0) { %>
                    <h5 class="empty-list">No Pets Available</h5>
                <% } else { %>
                    <div class="pets-grid">
                        <% allPets.forEach(function(pet) { %>
                            <div class="pet-card">
                                <% if(pet.imageURL) { %>
                                    <img 
                                        src="<%= pet.imageURL %>" 
                                        alt="<%= pet.name %>"
                                        class="pet-image"
                                    >
                                <% } %>
                                <div class="pet-info">
                                    <div class="pet-header">
                                        <h3 class="pet-name"><%= pet.name %></h3>
                                        <span class="pet-id">ID: <%= pet.id %></span>
                                    </div>
                                    <form method="post" action="/pets/delete/<%= pet.id %>">
                                        <button type="submit" class="delete-btn">
                                            <i class="fas fa-trash"></i>
                                            <span>Delete Pet</span>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } %>
            </section>
        </main>
        <footer>
            <div class="fcont">
                <div class="fhead">
                    <img src="./assets/fido_logo.png" alt="Fido Logo"/>
                    <div class="ftxt">
                        123 West Streetington <br> Arizona 85308
                    </div>
                </div>
                <div class="links">
                    <h1>Website Links</h1>
                    <h3><a href="/">Home Page</a></h3>
                    <h3><a href="/testimonials">Testimonials</a></h3>
                    <h3><a href="/FAQ">FAQ</a></h3>
                    <h3><a href="/about">About Us</a></h3>
                </div>
                <div class="socials">
                    <h1 class="socialtxt">
                        Social Media
                    </h1>
                    <div class="social-imgs">
                        <a href="https://www.instagram.com/">
                            <img src="./assets/insta logo.png" alt="Instagram">
                        </a>
                        <a href="https://x.com/?lang=en">
                            <img src="./assets/twit logo.png" alt="Twitter">
                        </a>
                        <a href="https://www.youtube.com/">
                            <img src="./assets/yt logo.png" alt="YouTube">
                        </a>
                    </div>
                </div>
            </div>
            <div class="foot">
                All Rights Reserved | Â©2024 Fido 
            </div>
        </footer>
    </body>
</html>
