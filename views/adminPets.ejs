<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- favicon -->
    <link rel="shortcut icon" href="./favicon.ico" type="image/x-icon" />
    <!-- FIND A FAVICON -->
    <!-- slogan = find your new best friend -->
    <!-- font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css"/>
    <!-- normalize css -->
    <link rel="stylesheet" href="./normalize.css" />
    <!-- main css -->
    <link rel="stylesheet" href="./styles.css" />
    <title>Pet Adoption Platform || Admin</title>
</head>
    <body>
        <a href="/adminUsers" class="home-link">
            <i class="fas fa-arrow-left"></i>
            Return to Users
        </a>
        <main>
            <header>
                <h2 class="page-title">Pets</h2>
            </header>
    
            <section class="pets-container">
                <% if (!allPets || allPets.length === 0) { %>
                    <h5 class="empty-list">No Pets Available</h5>
                <% } else { %>
                    <div class="pets-grid">
                        <% allPets.forEach(function(pet) { %>
                            <div class="pet-card">
                                <% if(pet.imageURL) { %>
                                    <img 
                                        src="<%= pet.imageURL %>" 
                                        alt="<%= pet.name %>"
                                        class="pet-image"
                                    >
                                <% } %>
                                <div class="pet-info">
                                    <div class="pet-header">
                                        <h3 class="pet-name"><%= pet.name %></h3>
                                        <span class="pet-id">ID: <%= pet.id %></span>
                                    </div>
                                    <form method="post" action="/pets/delete/<%= pet.id %>">
                                        <button type="submit" class="delete-btn">
                                            <i class="fas fa-trash"></i>
                                            <span>Delete Pet</span>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } %>
            </section>
        </main>
    </body>
</html>
